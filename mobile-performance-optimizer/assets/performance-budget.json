{
  "title": "Mobile Performance Budget",
  "description": "Performance budget for mobile and desktop web applications",
  "metrics": {
    "coreWebVitals": {
      "lcp": {
        "mobile": 2500,
        "desktop": 2000,
        "unit": "ms"
      },
      "fcp": {
        "mobile": 1800,
        "desktop": 1500,
        "unit": "ms"
      },
      "si": {
        "mobile": 3000,
        "desktop": 2500,
        "unit": "ms"
      },
      "cls": {
        "mobile": 0.1,
        "desktop": 0.1,
        "unit": "score"
      }
    },
    "resourceSizes": {
      "total": {
        "mobile": 1000000,
        "desktop": 1500000,
        "unit": "bytes"
      },
      "javascript": {
        "mobile": 300000,
        "desktop": 400000,
        "unit": "bytes"
      },
      "css": {
        "mobile": 100000,
        "desktop": 150000,
        "unit": "bytes"
      },
      "images": {
        "mobile": 500000,
        "desktop": 800000,
        "unit": "bytes"
      },
      "fonts": {
        "mobile": 100000,
        "desktop": 150000,
        "unit": "bytes"
      }
    },
    "requests": {
      "total": {
        "mobile": 50,
        "desktop": 60,
        "unit": "count"
      },
      "javascript": {
        "mobile": 15,
        "desktop": 20,
        "unit": "count"
      },
      "css": {
        "mobile": 5,
        "desktop": 8,
        "unit": "count"
      },
      "images": {
        "mobile": 20,
        "desktop": 25,
        "unit": "count"
      },
      "fonts": {
        "mobile": 5,
        "desktop": 7,
        "unit": "count"
      }
    },
    "server": {
      "ttfb": {
        "mobile": 800,
        "desktop": 600,
        "unit": "ms"
      },
      "firstPaint": {
        "mobile": 1000,
        "desktop": 800,
        "unit": "ms"
      }
    }
  },
  "rules": [
    {
      "name": "LCP under threshold",
      "metric": "coreWebVitals.lcp",
      "operator": "<",
      "severity": "error"
    },
    {
      "name": "FCP under threshold",
      "metric": "coreWebVitals.fcp",
      "operator": "<",
      "severity": "error"
    },
    {
      "name": "SI under threshold",
      "metric": "coreWebVitals.si",
      "operator": "<",
      "severity": "warning"
    },
    {
      "name": "CLS under threshold",
      "metric": "coreWebVitals.cls",
      "operator": "<",
      "severity": "error"
    },
    {
      "name": "Total size under budget",
      "metric": "resourceSizes.total",
      "operator": "<",
      "severity": "warning"
    },
    {
      "name": "JavaScript size under budget",
      "metric": "resourceSizes.javascript",
      "operator": "<",
      "severity": "error"
    },
    {
      "name": "Image size under budget",
      "metric": "resourceSizes.images",
      "operator": "<",
      "severity": "warning"
    },
    {
      "name": "Total requests under budget",
      "metric": "requests.total",
      "operator": "<",
      "severity": "warning"
    },
    {
      "name": "TTFB under threshold",
      "metric": "server.ttfb",
      "operator": "<",
      "severity": "error"
    }
  ],
  "audits": {
    "lighthouse": {
      "performance": {
        "mobile": 90,
        "desktop": 95
      },
      "accessibility": {
        "mobile": 90,
        "desktop": 90
      },
      "bestPractices": {
        "mobile": 90,
        "desktop": 90
      },
      "seo": {
        "mobile": 90,
        "desktop": 90
      }
    }
  },
  "environments": {
    "development": {
      "enabled": false,
      "description": "Performance budget disabled in development"
    },
    "staging": {
      "enabled": true,
      "description": "Performance budget enabled in staging"
    },
    "production": {
      "enabled": true,
      "description": "Performance budget enabled in production"
    }
  },
  "monitoring": {
    "tools": [
      "lighthouse",
      "webpagetest",
      "chrome-devtools",
      "gtmetrix"
    ],
    "frequency": "weekly",
    "alertThreshold": "warning"
  }
}